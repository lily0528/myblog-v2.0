@model CreateBlogViewModel
@{
    ViewBag.Title = "Edit";
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script src="~/Scripts/CreateEditBlog.js"></script>
}

<h2>Create</h2>
<form method="post">
    <div class="form-group">
        <label for="BlogTitle">Blog Title</label>
        @Html.EditorFor(input => input.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(input => input.Title)
    </div>
    <div class="form-group">
        <label for="Body">Body</label>
        @Html.LabelFor(p => p.Body, "Body")
        @Html.TextAreaFor(p => p.Body, new { @class = "form-control", placeholder = "Body", rows = 5, columns = 5 })
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Rating:</label>
        <div class="row">
            <div class="col-md-12">
                <label class="radio-inline">
                    @Html.RadioButtonFor(p => p.Published, 1) True
                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(p => p.Published, 0) Flase
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
</form>