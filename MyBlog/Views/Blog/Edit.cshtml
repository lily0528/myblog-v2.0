@model CreateBlogViewModel
@{
    ViewBag.Title = "Edit";
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script src="~/Scripts/CreateEditBlog.js"></script>
}

<h2>Create</h2>
<div class="col-12 col-lg-9">
    <div class="row">
        <div class="col-md-12">
            <!--Need to Add ENCTYPE help to get media object-->
            <form enctype="multipart/form-data" method="post">
                @Html.ValidationSummary(false)
                <div class="form-group" enctype="multipart/form-data">
                    @Html.EditorFor(input => input.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(input => input.Title)
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.Body, "Body")
                    @Html.TextAreaFor(p => p.Body, new { @class = "form-control", placeholder = "Body", rows = 5, columns = 5 })
                </div>
                <div class="form-group">
                    <input type="file" name="Media" />
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.Published, "If published")
                    @Html.CheckBoxFor(p => p.Published)
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
</div>